<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.cmu.gourmetreaper.ui.DetailActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dish Title"
        android:id="@+id/dishTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textColor="#FFAB08" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/star1"
        android:src="@drawable/star"
        android:layout_above="@+id/disText"
        android:layout_toRightOf="@+id/showImg"
        android:layout_toEndOf="@+id/showImg" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/star2"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/star1"
        android:layout_toRightOf="@+id/star1"
        android:layout_toEndOf="@+id/star1" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/star3"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/star2"
        android:layout_toRightOf="@+id/star2"
        android:layout_toEndOf="@+id/star2" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/star4"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/star3"
        android:layout_toRightOf="@+id/star3"
        android:layout_toEndOf="@+id/star3" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/star5"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/star4"
        android:layout_toRightOf="@+id/star4"
        android:layout_toEndOf="@+id/star4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(# reviews)"
        android:id="@+id/reviewNum"
        android:textSize="10dp"
        android:layout_alignBottom="@+id/star5"
        android:layout_toRightOf="@+id/star5"
        android:layout_toEndOf="@+id/star5"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Food Description"
        android:id="@+id/disText"
        android:layout_below="@+id/dishTitle"
        android:layout_alignLeft="@+id/dishTitle"
        android:layout_alignStart="@+id/dishTitle"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Add to order"
        android:id="@+id/addButton"
        android:layout_below="@+id/disText"
        android:layout_alignLeft="@+id/disText"
        android:layout_alignStart="@+id/disText"
        android:layout_marginTop="20dp"
        android:background="#ffffbf00"
        android:textColor="#ffffffff"
        android:onClick="addToOrder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/photoText"
        android:id="@+id/photoText"
        android:layout_below="@+id/addButton"
        android:layout_alignLeft="@+id/dishTitle"
        android:layout_alignStart="@+id/dishTitle"
        android:layout_marginTop="15dp"
        android:textSize="15dp"
        android:textColor="#FFAB08" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/dishImg1"
        android:src="@drawable/menu"
        android:layout_below="@+id/photoText"
        android:layout_alignRight="@+id/comTitle"
        android:layout_alignEnd="@+id/comTitle" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/dishImg2"
        android:src="@drawable/menu"
        android:layout_alignTop="@+id/dishImg1"
        android:layout_toRightOf="@+id/commentTitle"
        android:layout_toEndOf="@+id/commentTitle" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/uploadImg"
        android:src="@drawable/camara"
        android:layout_below="@+id/commentTitle"
        android:layout_alignLeft="@+id/commentTitle"
        android:layout_alignStart="@+id/commentTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/comTitle"
        android:id="@+id/comTitle"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/dishImg1"
        android:layout_alignLeft="@+id/photoText"
        android:layout_alignStart="@+id/photoText"
        android:textSize="15dp"
        android:textColor="#FFAB08" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/userImg1"
        android:layout_below="@+id/comTitle"
        android:layout_alignLeft="@+id/dishImg1"
        android:layout_alignStart="@+id/dishImg1"
        android:layout_marginTop="5dp"
        android:src="@drawable/user" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView12"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/userImg1"
        android:layout_toRightOf="@+id/userImg1"
        android:layout_toEndOf="@+id/userImg1"
        android:layout_marginLeft="20dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView13"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView12"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView14"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView13"
        android:layout_toRightOf="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView15"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView14"
        android:layout_toRightOf="@+id/imageView14"
        android:layout_toEndOf="@+id/imageView14" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView16"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView15"
        android:layout_toRightOf="@+id/imageView15"
        android:layout_toEndOf="@+id/imageView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:id="@+id/dishComText1"
        android:layout_below="@+id/imageView12"
        android:layout_alignLeft="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12"
        android:layout_marginTop="5dp"
        android:textSize="10dp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/userImg2"
        android:layout_below="@+id/userImg1"
        android:layout_alignLeft="@+id/userImg1"
        android:layout_alignStart="@+id/userImg1"
        android:layout_marginTop="5dp"
        android:src="@drawable/user" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView11"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/userImg2"
        android:layout_alignLeft="@+id/dishComText1"
        android:layout_alignStart="@+id/dishComText1" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView17"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView18"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView17"
        android:layout_toRightOf="@+id/imageView17"
        android:layout_toEndOf="@+id/imageView17" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView19"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView18"
        android:layout_toRightOf="@+id/imageView18"
        android:layout_toEndOf="@+id/imageView18" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:id="@+id/dishComText2"
        android:layout_below="@+id/imageView11"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignStart="@+id/imageView11"
        android:layout_marginTop="5dp"
        android:textSize="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dishComInput"
        android:width="160dp"
        android:textSize="12dp"
        android:layout_below="@+id/uploadImg"
        android:layout_alignLeft="@+id/uploadImg"
        android:layout_alignStart="@+id/uploadImg" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbShareButton"
        android:src="@drawable/share"
        android:layout_below="@+id/dishComInput"
        android:layout_toRightOf="@+id/imageView16"
        android:layout_toEndOf="@+id/imageView16"
        android:onClick="sharePhotoToFacebook" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Submit"
        android:id="@+id/submitDishCom"
        android:background="#ffffbf00"
        android:textColor="#ffffffff"
        android:layout_below="@+id/dishComInput"
        android:layout_alignRight="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView11"
        android:layout_marginTop="8dp"
        android:onClick="submitReview" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/commentTitle"
        android:id="@+id/commentTitle"
        android:textSize="15dp"
        android:textColor="#FFAB08"
        android:layout_below="@+id/userImg2"
        android:layout_alignLeft="@+id/comTitle"
        android:layout_alignStart="@+id/comTitle"
        android:layout_marginTop="11dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/dishImg3"
        android:src="@drawable/menu"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/dishImg2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/showImg"
        android:src="@drawable/menu"
        android:layout_below="@+id/commentTitle"
        android:layout_toRightOf="@+id/uploadImg"
        android:layout_toEndOf="@+id/uploadImg" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_alignBottom="@+id/dishComInput"
        android:layout_toRightOf="@+id/dishComInput"
        android:layout_toEndOf="@+id/dishComInput"
        android:layout_gravity="right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtRatingValue"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_alignRight="@+id/reviewNum"
        android:layout_alignEnd="@+id/reviewNum"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView3"
        android:src="@drawable/star"
        android:layout_alignTop="@+id/imageView19"
        android:layout_toRightOf="@+id/imageView19"
        android:layout_toEndOf="@+id/imageView19" />


</RelativeLayout>
