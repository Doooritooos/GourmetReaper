        android:layout_toRightOf="@+id/imageView22"
        android:layout_toEndOf="@+id/imageView22" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView24"
        android:src="@drawable/grey_star"
        android:layout_alignTop="@+id/imageView23"
        android:layout_toRightOf="@+id/imageView23"
        android:layout_toEndOf="@+id/imageView23" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/imageView25"
        android:src="@drawable/grey_star"
        android:layout_alignTop="@+id/imageView24"
        android:layout_toRightOf="@+id/imageView24"
        android:layout_toEndOf="@+id/imageView24" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/share"
        android:layout_marginTop="22dp"
        android:layout_alignTop="@+id/comText"
        android:layout_alignLeft="@+id/imageView21"
        android:layout_alignStart="@+id/imageView21" />


