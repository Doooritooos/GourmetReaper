<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.cmu.gourmetreaper.ui.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profile"
        android:id="@+id/profileTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/profileImg"
        android:layout_below="@+id/profileTitle"
        android:layout_alignLeft="@+id/profileTitle"
        android:layout_alignStart="@+id/profileTitle"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/nameText"
        android:layout_alignTop="@+id/profileImg"
        android:layout_toRightOf="@+id/profileImg"
        android:layout_toEndOf="@+id/profileImg"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status"
        android:id="@+id/statusText"
        android:layout_below="@+id/nameText"
        android:layout_alignLeft="@+id/nameText"
        android:layout_alignStart="@+id/nameText"
        android:layout_marginTop="30dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/orderImg"
        android:src="@drawable/order"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/profileImg"
        android:layout_centerHorizontal="true"
        android:onClick="viewOrder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="View Order"
        android:id="@+id/orderText"
        android:layout_below="@+id/orderImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/favImg"
        android:src="@drawable/like"
        android:layout_alignTop="@+id/couImg"
        android:layout_toRightOf="@+id/profileTitle"
        android:layout_toEndOf="@+id/profileTitle"
        android:onClick="shareFav" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Share Favorite"
        android:id="@+id/favText"
        android:layout_below="@+id/favImg"
        android:layout_alignLeft="@+id/favImg"
        android:layout_alignStart="@+id/favImg"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/couImg"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:src="@drawable/coupon"
        android:layout_below="@+id/orderText"
        android:layout_toRightOf="@+id/statusText"
        android:layout_toEndOf="@+id/statusText"
        android:onClick="getCoupon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Get Coupons"
        android:id="@+id/couText"
        android:layout_below="@+id/couImg"
        android:layout_alignLeft="@+id/couImg"
        android:layout_alignStart="@+id/couImg"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/friendImg"
        android:src="@drawable/friends"
        android:layout_below="@+id/favText"
        android:layout_centerHorizontal="true"
        android:onClick="makeFriend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Make Friends"
        android:id="@+id/friendText"
        android:layout_below="@+id/friendImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />



</RelativeLayout>
