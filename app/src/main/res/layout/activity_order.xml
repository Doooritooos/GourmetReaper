<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.edu.cmu.gourmetreaper.ui.OrderActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your order on (Date)"
        android:id="@+id/orderTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView26"
        android:layout_below="@+id/orderTitle"
        android:layout_alignLeft="@+id/orderTitle"
        android:layout_alignStart="@+id/orderTitle"
        android:layout_marginTop="20dp"
        android:src="@drawable/menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dish Name"
        android:id="@+id/dishText1"
        android:layout_alignTop="@+id/imageView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/desText1"
        android:layout_below="@+id/dishText1"
        android:layout_alignLeft="@+id/dishText1"
        android:layout_alignStart="@+id/dishText1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity:"
        android:id="@+id/quanTitle1"
        android:layout_below="@+id/desText1"
        android:layout_alignLeft="@+id/desText1"
        android:layout_alignStart="@+id/desText1"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/priceTitle1"
        android:layout_below="@+id/quanTitle1"
        android:layout_alignLeft="@+id/quanTitle1"
        android:layout_alignStart="@+id/quanTitle1"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/desText1"
        android:layout_toRightOf="@+id/quanTitle1"
        android:layout_toEndOf="@+id/quanTitle1" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView27"
        android:layout_marginTop="45dp"
        android:src="@drawable/menu"
        android:layout_below="@+id/imageView26"
        android:layout_alignLeft="@+id/imageView26"
        android:layout_alignStart="@+id/imageView26" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dish Name"
        android:id="@+id/dishText2"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@+id/imageView27"
        android:layout_alignLeft="@+id/priceTitle1"
        android:layout_alignStart="@+id/priceTitle1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/desText2"
        android:layout_below="@+id/dishText2"
        android:layout_alignLeft="@+id/dishText2"
        android:layout_alignStart="@+id/dishText2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity:"
        android:id="@+id/quanTitle2"
        android:layout_below="@+id/desText2"
        android:layout_alignLeft="@+id/desText2"
        android:layout_alignStart="@+id/desText2"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/priceTitle2"
        android:layout_below="@+id/quanTitle2"
        android:layout_alignLeft="@+id/quanTitle2"
        android:layout_alignStart="@+id/quanTitle2"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_below="@+id/desText2"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView28"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/imageView27"
        android:layout_alignLeft="@+id/imageView27"
        android:layout_alignStart="@+id/imageView27"
        android:src="@drawable/menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dish Name"
        android:id="@+id/dishText3"
        android:layout_alignTop="@+id/imageView28"
        android:layout_alignLeft="@+id/priceTitle2"
        android:layout_alignStart="@+id/priceTitle2"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description"
        android:id="@+id/desText3"
        android:layout_below="@+id/dishText3"
        android:layout_alignLeft="@+id/dishText3"
        android:layout_alignStart="@+id/dishText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quantity:"
        android:id="@+id/quanTitle3"
        android:layout_below="@+id/desText3"
        android:layout_alignLeft="@+id/desText3"
        android:layout_alignStart="@+id/desText3"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Price:"
        android:id="@+id/priceTitle3"
        android:layout_below="@+id/quanTitle3"
        android:layout_alignLeft="@+id/quanTitle3"
        android:layout_alignStart="@+id/quanTitle3"
        android:layout_marginTop="15dp" />

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner3"
        android:layout_below="@+id/desText3"
        android:layout_toRightOf="@+id/quanTitle3"
        android:layout_toEndOf="@+id/quanTitle3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Total price:"
        android:id="@+id/totalPriceTitle"
        android:layout_below="@+id/imageView28"
        android:layout_toRightOf="@+id/imageView28"
        android:layout_toEndOf="@+id/imageView28" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/checkOrder"
        android:background="#FFBF00"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/totalPriceTitle"
        android:layout_toRightOf="@+id/spinner3"
        android:layout_toEndOf="@+id/spinner3"
        android:onClick="checkOrder" />


</RelativeLayout>
